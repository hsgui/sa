<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	default-autowire="byName" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
	http://www.springframework.org/schema/tx 
	http://www.springframework.org/schema/tx/spring-tx-3.1.xsd">

	<bean id="liuSqlServerdataSource" class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName" value="com.microsoft.sqlserver.jdbc.SQLServerDriver" />
		<property name="url"
			value="jdbc:sqlserver://10.108.104.52:1433;DatabaseName=SinaWeiboTopicTest;useUnicode=true&amp;characterEncoding=utf-8" />
		<property name="username" value="sa" />
		<property name="password" value="bnrc609" />
		<property name="initialSize" value="5"></property>
		<property name="maxActive" value="50"></property>
		<property name="maxIdle" value="5"></property>
		<property name="minIdle" value="1"></property>
	</bean>

	<bean id="liuSqlServerSqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="liuSqlServerdataSource" />
		<property name="configLocation" value="classpath:mybatis/mybatis-config.xml"></property>
	</bean>
	
	<bean id="trendingTopicsMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="mapperInterface" value="cn.bupt.bnrc.mining.weibo.repository.localsqlserver.TrendingTopicsMapper"></property>
		<property name="sqlSessionFactory" ref="liuSqlServerSqlSessionFactory"></property>
	</bean>
	
	<bean id="topicRelatedWeiboMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="mapperInterface" value="cn.bupt.bnrc.mining.weibo.repository.localsqlserver.TopicRelatedWeiboMapper"></property>
		<property name="sqlSessionFactory" ref="liuSqlServerSqlSessionFactory"></property>
	</bean>
</beans>